@model MVC_SIS_UI.Models.AddCourseVM
@{
    ViewBag.Title = "AddCourse";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Add Course</h3>
        @Html.ActionLink("Return to List", "ListCourses", "Admin")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("AddCourse", "Admin", FormMethod.Post))
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label>Course</label>
                @Html.TextBoxFor(m => m.currentCourse.CourseName, new { @class = "form-control", placeholder = "Course Name" })
            </div>
            <button type="submit" class="btn btn-sm btn-primary">Save</button>
        }
    </div>
</div>