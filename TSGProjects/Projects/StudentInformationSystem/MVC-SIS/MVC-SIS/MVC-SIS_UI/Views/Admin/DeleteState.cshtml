@model MVC_SIS_UI.Models.DeleteStateVM
@{
    ViewBag.Title = "DeleteState";
}

<h2>DeleteState</h2>

<div class="row">
    <div class="col-xs-12">
        <h3>Delete State</h3>
        @Html.ActionLink("Return to List", "ListStates", "Admin")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("DeleteState", "Admin", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.currentState.StateAbbreviation)
            <p>Are you sure that you wish to delete the state @Html.DisplayFor(m => m.currentState.StateName)?</p>
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
            @Html.ActionLink("Cancel", "ListStates", "Admin", null, new { @class = "btn btn-sm btn-info" })
        }
    </div>
</div>