@model CarDealership.UI.Models.ReportSearchVM

@{
    ViewBag.Title = "Report - Sales";
}

<h3>@ViewBag.Message</h3>

<div class="quickSearchBordered">
    <div class="row">
        <div class="col-md-12">
            <p>
                Filters
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <form id="searchForm" class="form-inline">
                <div class="form-group">
                    <label for="minRate">User</label>
                    <input type="text" class="form-control" id="UserSearch" placeholder="Enter user">
                </div>
                <div class="form-group">
                    <label for="minRate">From Date</label>
                    <input type="text" class="form-control" id="FromDate" placeholder="From Date">
                </div>
                <div class="form-group">
                    <label for="minRate">To Date</label>
                    <input type="text" class="form-control" id="ToDate" placeholder="To Date">
                </div>
                <button id="btnSearch" class="btn btn-default">Search</button>
            </form>
        </div>
    </div>
</div>

<h3>Search Results</h3>
<div class="row">
    <div class="col-md-5" id="bordered">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Total Sales</th>
                    <th>Total Vehicles</th>
                </tr>
            </thead>
            <tbody id="searchResults">
            </tbody>
        </table>
    </div>
</div>

