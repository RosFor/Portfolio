@model CarDealership.UI.Models.ContactVM
@{
    ViewBag.Title = "Contact";
}
<h3>@ViewBag.Message</h3>

<div class="container">
    <div class="row">
        <div class="col-md-5">
            @Html.ValidationSummary()
            @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { @name = "myForm" }))
            {
                @Html.HiddenFor(m => m.VinNumber, new { Value = Model.VinNumber })
                @*@Html.HiddenFor(m => m.Contact.ContactPhone, new { Value = Model.Contact.ContactPhone })
                @Html.HiddenFor(m => m.Contact.ContactEmail, new { Value = Model.Contact.ContactEmail })*@
                <div class="form-group">
                    <label>Full Name</label>
                    @Html.TextBoxFor(m => m.Contact.ContactName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(m => m.Contact.ContactEmail, new { @class = "form-control", name = "email" })
                    @Html.ValidationMessageFor(m => m.Contact.ContactEmail, null, new { @class = "field-validation-error", data_valmsg_for = "VehicleModel.ModelName" })
                </div>
                <div class="form-group">
                    <label>Phone Number</label>
                    @Html.TextBoxFor(m => m.Contact.ContactPhone, new { @class = "form-control", name = "phone" })
                    @Html.ValidationMessageFor(m => m.Contact.ContactPhone, null, new { @class = "field-validation-error", data_valmsg_for = "VehicleModel.ModelName" })
                </div>
                <div class="form-group">
                    <label>Message</label>
                    @Html.TextAreaFor(m => m.Contact.ContactMessage, new { @class = "form-control", @value = Model.Contact.ContactMessage })
                </div>
                <button class="btn btn-primary" onsubmit="return validateForm()">Submit</button>
            }
        </div>
        <div>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d90438.45003958471!2d-93.23141102530873!3d44.89889524726216!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x87f62f2a85c06a07%3A0x2bd3d37c78783591!2sMinneapolis%E2%88%92Saint%20Paul%20International%20Airport!5e0!3m2!1sen!2sus!4v1650656305076!5m2!1sen!2sus" width="400" height="300" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
        <div class="col-md-5">
            <address>
                333 W Main St<br />
                Kent, OH 55555-4444<br />
            </address>

            <address>
                <strong>Sales:</strong> 333.333.4444<br />
                <strong>Service:</strong> 333.333.4444
            </address>
        </div>
    </div>
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/SiteValidate.js")
}