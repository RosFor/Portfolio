@model MVC_SIS_UI.Models.AddStateVM
@{
    ViewBag.Title = "AddState";
}

<div class="row">
    <div class="col-md-5">
        <h3>Add State</h3>
        @Html.ActionLink("Return to List", "ListStates", "Admin")
    </div>
</div>
<div class="row">
    <div class="col-md-5">
        @Html.ValidationSummary()
        @using (Html.BeginForm("AddState", "Admin", FormMethod.Post))
        {
            <div class="form-group">
                <label>State Name</label>
                @Html.TextBoxFor(m => m.currentState.StateName, new { @class = "form-control", placeholder = "Name" })
            </div>
            <div class="form-group">
                <label>State Abbreviation</label>
                @Html.TextBoxFor(m => m.currentState.StateAbbreviation, new { @class = "form-control", placeholder = "Abbreviation" })
            </div>
            <button type="submit" class="btn btn-sm btn-primary">Save</button>
        }
    </div>
</div>

